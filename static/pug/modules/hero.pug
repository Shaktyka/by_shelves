include hero-data

- var slide1 = heroSlides[0]

//- Промо-блок
section.hero
    .container
        .hero__slider.slider
            ul.slider__list
                li.slider__item
                    h2.slider__title= slide1.title
                    p.slider__text= slide1.text
                    a.slider__link(href=`${slide1.link}`) Подробнее
                        img.slider__img(
                            src=`${pathContentImg}${slide1.img_1x}`
                            srcset=`${pathContentImg}${slide1.img_2x} 2x`
                            width="400"
                            height="633"
                            alt=`${slide1.name}`)
            ul.slider__bullets
                li.slider__bullet
                    button.slider__bullet-button.slider__bullet-button--active
                        span.visually-hidden Первый слайд
                li.slider__bullet
                    button.slider__bullet-button
                        span.visually-hidden Второй слайд
                li.slider__bullet
                    button.slider__bullet-button
                        span.visually-hidden Третий слайд
            ul.slider__arrows
                li.slider__arrow
                    button.slider__arrow-button.slider__arrow-button--prev
                        span.visually-hidden Переключить на предыдущий слайд
                        . 
                            <svg
                                class="slider__icon-arrow"
                                width="7"
                                height="12"
                                viewBox="0 0 7 12"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
